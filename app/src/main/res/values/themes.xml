<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsCleanArch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SplashCategoryTextStyle">
        <item name="android:background">@color/primaryRed</item>
        <item name="fontFamily">@font/rockwell_std_regular</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>


    <style name="PrimaryButtonStyle">
        <item name="backgroundTint">@color/primaryRed</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="fontFamily">@font/rockwell_std_regular</item>
        <item name="android:gravity">center</item>
    </style>

</resources>